FROM debian
WORKDIR app
ARG mytoken

# Install deps
RUN apt-get update && apt-get autoclean && \
    apt-get install -y -q --allow-unauthenticated \
    git curl sudo build-essential gcc

# set up dirs
RUN useradd -m -s /bin/bash linuxbrew && \
    usermod -aG sudo linuxbrew &&  \
    mkdir -p /home/linuxbrew/.linuxbrew && \
    chown -R linuxbrew: /home/linuxbrew/.linuxbrew

RUN /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"
ENV PATH="/home/linuxbrew/.linuxbrew/bin:${PATH}"
RUN brew install gh
RUN brew install pre-commit
RUN gh auth setup-git -h github.com
RUN echo $mytoken | gh auth login --with-token --git-protocol https
# RUN gh auth setup-git
RUN brew tap slalombuild/secureli && brew install secureli
